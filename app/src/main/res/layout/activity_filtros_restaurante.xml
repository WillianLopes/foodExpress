<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.foodexpress.app.filtrosRestaurante"
    android:minHeight="50dp"
    android:minWidth="50dp"
    android:background="@drawable/bg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Escolha o tipo de comida!"
        android:id="@+id/textView"
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white" />

<GridLayout
    android:id="@+id/GridLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:rowCount="2"
    android:orientation="horizontal"
    tools:context=".GridXMLActivity"
    android:layout_above="@+id/imageView7"
    android:layout_toRightOf="@+id/imageView7">




    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gourmet"
        android:id="@+id/checkBox"
        android:layout_marginTop="8dp"
        android:layout_gravity="left|top"
        android:checked="false"
        android:onClick="onCheckboxClicked"
        android:textColor="@color/white" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pizza"
        android:id="@+id/checkBox2"
        android:layout_marginTop="8dp"
        android:layout_gravity="left|top"
        android:layout_marginLeft="5dp"
        android:checked="false"
        android:onClick="onCheckboxClicked"
        android:textColor="@color/white" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Japonesa"
        android:id="@+id/checkBox3"
        android:layout_marginTop="20dp"
        android:layout_gravity="left|top"
        android:checked="false"
        android:onClick="onCheckboxClicked"
        android:textColor="@color/white" />


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Massas"
        android:id="@+id/checkBox4"
        android:layout_marginTop="20dp"
        android:layout_gravity="left|top"
         android:layout_marginLeft="5dp"
        android:checked="false"
        android:onClick="onCheckboxClicked"
        android:textColor="@color/white" />


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chinesa"
        android:id="@+id/checkBox5"
        android:layout_marginTop="20dp"
        android:layout_gravity="left|top"
        android:checked="false"
        android:onClick="onCheckboxClicked"
        android:textColor="@color/white" />


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FastFood"
        android:id="@+id/checkBox6"
        android:layout_marginTop="20dp"
        android:layout_gravity="left|top"
        android:layout_marginLeft="5dp"
        android:checked="false"
        android:onClick="onCheckboxClicked"
        android:textColor="@color/white" />


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mexicana"
        android:id="@+id/checkBox7"
        android:layout_marginTop="20dp"
        android:layout_gravity="left|top"
        android:checked="false"
        android:onClick="onCheckboxClicked"
        android:textColor="@color/white" />


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sobremesa"
        android:id="@+id/checkBox8"
        android:layout_marginTop="20dp"
        android:layout_gravity="left|top"
        android:layout_marginLeft="5dp"
        android:checked="false"
        android:onClick="onCheckboxClicked"
        android:textColor="@color/white" />




</GridLayout>


    <Button
        android:id="@+id/button2"

        android:text="Procurar!"
        android:textSize="30sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="225dp"
        android:layout_height="55dp"

        />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_above="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:minHeight="50dp"
        android:minWidth="50dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_above="@+id/button2"
        android:layout_toRightOf="@+id/imageView"
        android:minHeight="50dp"
        android:minWidth="50dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:layout_above="@+id/button2"
        android:layout_toRightOf="@+id/imageView2"
        android:minHeight="50dp"
        android:minWidth="50dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:layout_above="@+id/button2"
        android:layout_toRightOf="@+id/imageView3"
        android:minHeight="50dp"
        android:minWidth="50dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView5"
        android:layout_above="@+id/button2"
        android:layout_toRightOf="@+id/imageView4"
        android:minHeight="50dp"
        android:minWidth="50dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView6"
        android:layout_above="@+id/button2"
        android:layout_toRightOf="@+id/imageView5"
        android:minHeight="50dp"
        android:minWidth="50dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView7"
        android:minHeight="50dp"
        android:minWidth="50dp"
        android:layout_above="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView8"
        android:minHeight="50dp"
        android:minWidth="50dp"
        android:layout_alignTop="@+id/imageView7"
        android:layout_toRightOf="@+id/imageView7" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView9"
        android:minHeight="50dp"
        android:minWidth="50dp"
        android:layout_alignTop="@+id/imageView8"
        android:layout_toRightOf="@+id/imageView8" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView10"
        android:minHeight="50dp"
        android:minWidth="50dp"
        android:layout_alignTop="@+id/imageView9"
        android:layout_toRightOf="@+id/imageView9" />

</RelativeLayout>
